<h1>Birthdays list</h1>
<% if(birthdays){ %>
    <% birthdays.forEach(function(birthday){ %>
        <div>
            <h2>
                <%= birthday.name%>
            </h2>
            <h2>
                <%= birthday.date%>
            </h2>
            <a href="/birthdays/<%= birthday._id%>">Details</a>
            <br>
        </div>

    <% }) %>
<% } %>

<br><br>
<a href="/birthdays/new">Add new Birthday</a>

<form action="/logout" method="POST">
    <button>Log out</button>
</form>

<form action="/logoutall" method="POST">
    <button>Log out from everywhere</button>
</form>